{
    "compilerOptions": {
        "jsx": "react",
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./demos",
        "paths": {
            "react": [
                "../packages/react"
            ],
            "react-dom": [
                "../packages/react-dom"
            ],
        }
    },
    "include": [
        "./demos/**/*.tsx",
        "./packages/**/*.ts"
    ]
}