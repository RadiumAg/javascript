{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./packages",
    "paths": {
      "hostConfig": [
        "react-dom/src/hostConfig.ts"
      ]
    },
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
  ],
  "includes": [
    "./packages/**/*.ts"
  ],
  "exclude": [
    "./demos/**/*.tsx",
    "./scripts/**/*.ts"
  ]
}